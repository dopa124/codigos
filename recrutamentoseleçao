    <script>
        let activeTab = 'processos';
        let processos = [];
        let candidatos = [];
        let processoSelecionado = '';

        function converterParaMeses(exp) {
            switch (exp.unidade) {
                case 'dias': return exp.tempo / 30;
                case 'meses': return exp.tempo;
                case 'anos': return exp.tempo * 12;
                default: return 0;
            }
        }

        function calcularCompatibilidade(candidato, processo) {
            let pontos = 0;
            if (candidato.formacao.toLowerCase().includes(processo.formacao.toLowerCase()) ||
                processo.formacao.toLowerCase().includes(candidato.formacao.toLowerCase())) {
                pontos += 30;
            }
            const cursosProcesso = processo.cursosEPdis.toLowerCase().split(',').map(c => c.trim()).filter(Boolean);
            const cursosCandidato = candidato.cursosEPdis.toLowerCase().split(',').map(c => c.trim()).filter(Boolean);
            const cursosComuns = cursosProcesso.filter(cp =>
                cursosCandidato.some(cc => cc.includes(cp) || cp.includes(cc))
            );
            pontos += (cursosComuns.length / Math.max(cursosProcesso.length, 1)) * 25;
            const expCandidatoMeses = converterParaMeses(candidato.experiencia);
            const expProcessoMeses = converterParaMeses(processo.experiencia);
            if (expCandidatoMeses >= expProcessoMeses) {
                pontos += 25;
            } else {
                pontos += (expCandidatoMeses / expProcessoMeses) * 25;
            }
            if (expCandidatoMeses > expProcessoMeses * 1.5) {
                pontos += 20;
            } else if (expCandidatoMeses > expProcessoMeses) {
                pontos += 10;
            }
            return Math.min(Math.round(pontos), 100);
        }

        function getCompatibilidadeColor(compatibilidade) {
            if (compatibilidade >= 70) return 'bg-green-500';
            if (compatibilidade >= 40) return 'bg-yellow-500';
            return 'bg-red-500';
        }

        function getCompatibilidadeLabel(compatibilidade) {
            if (compatibilidade >= 70) return 'Alta Compatibilidade';
            if (compatibilidade >= 40) return 'Média Compatibilidade';
            return 'Baixa Compatibilidade';
        }

        function criarProcesso() {
            const nomeProcesso = document.getElementById('nome-processo').value.trim();
            const cursosProcesso = document.getElementById('cursos-processo').value.trim();
            const formacaoProcesso = document.getElementById('formacao-processo').value.trim();
            const tempoExpProcesso = document.getElementById('tempo-exp').value.trim();
            const unidadeExpProcesso = document.getElementById('unidade-exp-processo').value;
            if (!nomeProcesso || !cursosProcesso || !formacaoProcesso || !tempoExpProcesso) {
                alert('Preencha todos os campos obrigatórios');
                return;
            }
            const novoProcesso = {
                id: Date.now().toString(),
                nome: nomeProcesso,
                cursosEPdis: cursosProcesso,
                formacao: formacaoProcesso,
                experiencia: {
                    tempo: parseInt(tempoExpProcesso),
                    unidade: unidadeExpProcesso
                }
            };
            processos.push(novoProcesso);
            document.getElementById('nome-processo').value = '';
            document.getElementById('cursos-processo').value = '';
            document.getElementById('formacao-processo').value = '';
            document.getElementById('tempo-exp').value = '';
            renderProcessos();
            renderSelects();
        }

        function adicionarCandidato() {
            const nomeCandidato = document.getElementById('nome-candidato').value.trim();
            const dataNascimento = document.getElementById('data-nascimento').value;
            const formacaoCandidato = document.getElementById('formacao-candidato').value.trim();
            const cursosCandidato = document.getElementById('cursos-candidato').value.trim();
            const tempoCandidato = document.getElementById('tempo-candidato').value.trim();
            const unidadeCandidato = document.getElementById('unidade-candidato').value;
            if (!nomeCandidato || !dataNascimento || !formacaoCandidato || !cursosCandidato || !tempoCandidato || !processoSelecionado) {
                alert('Preencha todos os campos obrigatórios e selecione um processo');
                return;
            }
            const novoCandidato = {
                id: Date.now().toString(),
                processoId: processoSelecionado,
                nome: nomeCandidato,
                dataNascimento,
                experiencia: {
                    tempo: parseInt(tempoCandidato),
                    unidade: unidadeCandidato
                },
                formacao: formacaoCandidato,
                cursosEPdis: cursosCandidato
            };
            const processo = processos.find(p => p.id === processoSelecionado);
            if (processo) {
                novoCandidato.compatibilidade = calcularCompatibilidade(novoCandidato, processo);
            }
            candidatos.push(novoCandidato);
            document.getElementById('nome-candidato').value = '';
            document.getElementById('data-nascimento').value = '';
            document.getElementById('formacao-candidato').value = '';
            document.getElementById('cursos-candidato').value = '';
            document.getElementById('tempo-candidato').value = '';
            renderSelects();
        }

        function renderProcessos() {
            const grid = document.getElementById('processos-grid');
            grid.innerHTML = '';
            processos.forEach(processo => {
                const count = candidatos.filter(c => c.processoId === processo.id).length;
                const html = `
                    <div class="hover:shadow-2xl transition-all duration-300 border-0 bg-white/80 backdrop-blur-sm overflow-hidden rounded-xl">
                        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 pb-4 pt-6 px-6">
                            <h3 class="text-xl font-bold text-gray-800">${processo.nome}</h3>
                        </div>
                        <div class="p-6">
                            <div class="space-y-3 text-gray-700">
                                <div class="flex items-center gap-2">
                                    <strong class="text-blue-600">Formação:</strong>
                                    <span class="text-sm">${processo.formacao}</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <strong class="text-blue-600">Cursos/PDIs:</strong>
                                    <span class="text-sm">${processo.cursosEPdis}</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <strong class="text-blue-600">Experiência:</strong>
                                    <span class="text-sm">${processo.experiencia.tempo} ${processo.experiencia.unidade}</span>
                                </div>
                                <span class="inline-block mt-3 px-3 py-1 bg-gradient-to-r from-green-100 to-emerald-100 text-green-700 border border-green-200 rounded-full text-sm">
                                    ${count} candidatos
                                </span>
                            </div>
                        </div>
                    </div>
                `;
                grid.innerHTML += html;
            });
        }

        function renderRanking() {
            const container = document.getElementById('ranking-container');
            container.innerHTML = '';
            if (!processoSelecionado) {
                container.innerHTML = `
                    <div class="text-center py-12">
                        <i class="fas fa-exclamation-triangle w-16 h-16 text-gray-400 mx-auto mb-4"></i>
                        <p class="text-xl text-gray-500">Nenhum candidato encontrado para este processo.</p>
                    </div>
                `;
                return;
            }
            let candidatosRankeados = candidatos
                .filter(c => c.processoId === processoSelecionado)
                .sort((a, b) => (b.compatibilidade || 0) - (a.compatibilidade || 0));
            if (candidatosRankeados.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-12">
                        <i class="fas fa-exclamation-triangle w-16 h-16 text-gray-400 mx-auto mb-4"></i>
                        <p class="text-xl text-gray-500">Nenhum candidato encontrado para este processo.</p>
                    </div>
                `;
                return;
            }
            candidatosRankeados.forEach((candidato, index) => {
                const colorClass = getCompatibilidadeColor(candidato.compatibilidade || 0);
                const label = getCompatibilidadeLabel(candidato.compatibilidade || 0);
                const html = `
                    <div class="border-l-4 border-l-purple-500 hover:shadow-xl transition-all duration-300 bg-white/60 rounded-xl">
                        <div class="p-6">
                            <div class="flex items-center justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center gap-4 mb-4">
                                        <span class="px-3 py-1 text-lg border-2 border-purple-300 rounded-full bg-white text-purple-600 font-bold">
                                            #${index + 1}
                                        </span>
                                        <h3 class="font-bold text-2xl text-gray-800">${candidato.nome}</h3>
                                        <span class="${colorClass} text-white px-4 py-2 text-lg font-semibold shadow-md rounded-full whitespace-pre-line text-center">
                                            ${candidato.compatibilidade}%<br>
                                            <span class="text-sm">${label}</span>
                                        </span>
                                    </div>
                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-gray-700">
                                        <div class="space-y-1">
                                            <strong class="text-purple-600">Formação:</strong>
                                            <p class="text-sm">${candidato.formacao}</p>
                                        </div>
                                        <div class="space-y-1">
                                            <strong class="text-purple-600">Experiência:</strong>
                                            <p class="text-sm">${candidato.experiencia.tempo} ${candidato.experiencia.unidade}</p>
                                        </div>
                                        <div class="space-y-1">
                                            <strong class="text-purple-600">Cursos:</strong>
                                            <p class="text-sm">${candidato.cursosEPdis}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                container.innerHTML += html;
            });
        }

        function renderSWOT() {
            const uniqueForm = [...new Set(processos.map(p => p.formacao).filter(Boolean))];
            document.getElementById('fortalezas-badges').innerHTML = uniqueForm.map(form => `
                <span class="border border-green-300 text-green-700 bg-green-100 px-3 py-1 rounded-full text-sm">${form}</span>
            `).join('');
            document.getElementById('total-processos').textContent = processos.length;
            const allCursos = processos.flatMap(p => p.cursosEPdis.split(',').map(c => c.trim()).filter(Boolean));
            const uniqueCursos = [...new Set(allCursos)];
            document.getElementById('oportunidades-badges').innerHTML = uniqueCursos.slice(0, 8).map(curso => `
                <span class="border border-blue-300 text-blue-700 bg-blue-100 px-3 py-1 rounded-full text-sm">${curso}</span>
            `).join('');
            document.getElementById('total-candidatos').textContent = candidatos.length;
            const fraquezas = ['Falta de diversidade em algumas áreas', 'Processos seletivos longos'];
            document.getElementById('fraquezas-list').innerHTML = fraquezas.map(f => `
                <div class="flex items-center gap-3 p-3 bg-yellow-50 rounded-lg">
                    <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                    <p class="text-yellow-700 text-sm">${f}</p>
                </div>
            `).join('');
            const media = candidatos.length > 0 ? Math.round(candidatos.reduce((acc, c) => acc + (c.compatibilidade || 0), 0) / candidatos.length) : 0;
            document.getElementById('media-compat-swot').textContent = media + '%';
            document.getElementById('media-compat').textContent = media + '%';
            const qual = candidatos.filter(c => (c.compatibilidade || 0) >= 70).length;
            document.getElementById('candidatos-qual').textContent = qual;
            document.getElementById('processos-ativos').textContent = processos.length;
            const ameacas = ['Concorrência por talentos', 'Mudanças tecnológicas rápidas'];
            document.getElementById('ameacas-list').innerHTML = ameacas.map(a => `
                <div class="flex items-center gap-3 p-3 bg-red-50 rounded-lg">
                    <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                    <p class="text-red-700 text-sm">${a}</p>
                </div>
            `).join('');
            const baixa = candidatos.filter(c => (c.compatibilidade || 0) < 40).length;
            document.getElementById('baixa-compat').textContent = baixa;
        }

        function renderSelects() {
            const selectIds = ['processo-select', 'processo-ranking'];
            selectIds.forEach(id => {
                const sel = document.getElementById(id);
                if (!sel) return;
                const currentVal = sel.value;
                sel.innerHTML = '<option value="">Escolha um processo seletivo</option>';
                processos.forEach(p => {
                    sel.innerHTML += `<option value="${p.id}">${p.nome}</option>`;
                });
                if (currentVal && processos.some(p => p.id === currentVal)) {
                    sel.value = currentVal;
                }
            });
        }

        function setProcessoSelecionado(val) {
            processoSelecionado = val;
            if (activeTab === 'ranking') {
                renderRanking();
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const triggers = document.querySelectorAll('.tab-trigger');
            triggers.forEach(trigger => {
                trigger.addEventListener('click', function(e) {
                    e.preventDefault();
                    const tab = this.dataset.tab;
                    activeTab = tab;
                    triggers.forEach(t => t.classList.remove('active-class'));
                    this.classList.add('active-class');
                    document.querySelectorAll('.tab-content').forEach(content => {
                        content.classList.add('hidden');
                    });
                    document.getElementById(`tab-content-${tab}`).classList.remove('hidden');
                    if (tab === 'processos') {
                        renderProcessos();
                        renderSelects();
                    } else if (tab === 'ranking') {
                        renderSelects();
                        renderRanking();
                    } else if (tab === 'swot') {
                        renderSWOT();
                    } else if (tab === 'candidatos') {
                        renderSelects();
                    }
                });
            });
            document.querySelector('[data-tab="processos"]').classList.add('active-class');
            document.getElementById('tab-content-processos').classList.remove('hidden');
            renderProcessos();
            renderSelects();
        });
    </script>
</body>
</html>
```